enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Category {
  id: ID! @id
  itunesId: Int! @unique
  name: String!
}

type Podcast {
  id: ID! @id
  itunesId: Int! @unique
  title: String!
  author: String!
  description: String!
  artwork: String!
  feedUrl: String!
  categories: [Category!]!
}
