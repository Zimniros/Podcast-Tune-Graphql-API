enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Category {
  id: ID! @id
  itunesId: Int! @unique
  name: String!
}

type Podcast {
  id: ID! @id
  itunesId: Int! @unique
  title: String!
  author: String!
  description: String!
  artworkSmall: String!
  artworkLarge: String!
  feedUrl: String!
  websiteUrl: String!
  itunesUrl: String!
  categories: [Category!]!
  episodes: [Episode!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  feedCheckedAt: DateTime
}

type Episode {
  id: ID! @id
  podcast: Podcast!
  title: String!
  description: String
  mediaUrl: String!
  duration: Float @default(value: 0)
  durationVerified: Boolean! @default(value: false)
  pubDate: DateTime
  link: String
}
