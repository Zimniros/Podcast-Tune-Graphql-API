enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  queue: [QueueEpisode!]!
  inProgress: [InProgressEpisode!]!
  favorites: [FavoriteEpisode!]!
  subscribedPodcasts: [SubscribedPodcast!]!
}

type SubscribedPodcast {
  id: ID! @id
  subscribedAt: DateTime! @createdAt
  user: User!
  podcast: Podcast!
}

type FavoriteEpisode {
  id: ID! @id
  user: User!
  episode: Episode!
  addedAt: DateTime! @createdAt
}

type InProgressEpisode {
  id: ID! @id
  user: User!
  episode: Episode!
  updatedAt: DateTime! @updatedAt
  playedTime: Float!
}

type PlayedEpisode {
  id: ID! @id
  user: User!
  episode: Episode!
  finishedAt: DateTime! @createdAt
}

type QueueEpisode {
  id: ID! @id
  user: User!
  episode: Episode!
  position: Int!
}

type Category {
  id: ID! @id
  itunesId: Int! @unique
  name: String!
}

type Podcast {
  id: ID! @id
  itunesId: Int! @unique
  title: String!
  titleLC: String!
  author: String!
  authorLC: String!
  description: String
  artworkSmall: String!
  artworkLarge: String!
  feedUrl: String
  websiteUrl: String
  itunesUrl: String!
  categories: [Category!]!
  episodes: [Episode!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  feedCheckedAt: DateTime
  isFeedUpdating: Boolean! @default(value: false)
}

type Episode {
  id: ID! @id
  podcast: Podcast!
  title: String!
  description: String
  mediaUrl: String!
  duration: Float @default(value: 0)
  durationVerified: Boolean! @default(value: false)
  episodeArtwork: String
  pubDate: DateTime
  link: String
}
